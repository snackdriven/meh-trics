{
  "name": "meh-trics-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "cd ../frontend && npm install && npm run build --outDir=../backend/frontend/dist",
    "dev": "npx encore run",
    "test": "npm test",
    "type-check": "npx tsc --noEmit",
    "clean": "rm -rf dist frontend/dist",
    "lint": "npx @biomejs/biome lint .",
    "lint:fix": "npx @biomejs/biome lint --apply .",
    "format": "npx @biomejs/biome format --write .",
    "check": "npx @biomejs/biome check .",
    "check:fix": "npx @biomejs/biome check --apply ."
  },
  "dependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.5",
    "canvas-confetti": "^1.9.3",
    "encore.dev": "^1.48.4",
    "node-ical": "^0.20.1"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  }
}
