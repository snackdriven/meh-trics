{
  "name": "meh-trics",
  "version": "1.0.0",
  "description": "A personal productivity and mood tracking application",
  "scripts": {
    "dev": "encore run",
    "build": "encore build",
    "test": "encore test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm run test",
    "seed": "bun run backend/seed.ts",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "keywords": [
    "productivity",
    "mood-tracking",
    "habits",
    "tasks"
  ],
  "author": "Bette",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "typescript": "^5.2.2",
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "node-ical": "^0.16.1"
  },
  "workspaces": [
    "frontend"
  ]
}
