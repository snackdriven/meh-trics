{
  "name": "leap-app",
  "version": "1.0.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "9.1.7",
    "jsdom": "^26.1.0",
    "sql-lint": "^1.0.2"
  },
  "packageManager": "bun",
  "type": "module",
  "workspaces": ["backend", "frontend"],
